{
  "rulesDirectory": [
    "../node_modules/tslint-eslint-rules/dist/rules"
  ],
  "extends": [
    "tslint-eslint-rules"
  ],
  "rules": {
    "array-bracket-spacing": [
      true,
      "never"
    ],
    "block-spacing": [
      true,
      "always"
    ],
    "brace-style": [
      true,
      "1tbs",
      {
          "allowSingleLine": false
      }
    ],
    "handle-callback-err": [true, "^(err|error)$"],
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-duplicate-case": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-inner-declarations": [
      true,
      "functions"
    ],
    "no-invalid-regexp": true,
    "no-multi-spaces": true,
    "no-regex-spaces": true,
    "no-unexpected-multiline": true,
    "object-curly-spacing": [
      true,
      "always"
    ],
    "sort-imports": false, // ordered-imports in tslint
    "space-in-parens": false, // space-within-parens in tslint
    "ter-arrow-body-style": false, // arrow-return-shorthand in tslint
    "ter-arrow-parens": false, // arrow-parens in tslint
    "ter-arrow-spacing": [
      true,
      {
        "before": true,
        "after": true
      }
    ],
    "ter-computed-property-spacing": [
      true,
      "never"
    ],
    "ter-func-call-spacing": [
      true,
      "never"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": 1,
        "CallExpression": 1,
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        }
      }
    ],
    "ter-max-len": false, // max-line-length in tslint
    "ter-newline-after-var": [
      true,
      "always"
    ],
    "ter-no-irregular-whitespace": false, // no-irregular-whitespace in tslint
    "ter-no-mixed-spaces-and-tabs": false, // indent in tslint
    "ter-no-proto": true,
    "ter-no-script-url": true,
    "ter-no-self-compare": true,
    "ter-no-sparse-arrays": false, // no-sparse-arrays in tslint
    "ter-no-tabs": true,
    "ter-padded-blocks": [true, "never"],
    "ter-prefer-arrow-callback": [true],
    "valid-jsdoc": [true],
    "valid-typeof": true
  }
}
